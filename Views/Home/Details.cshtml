@model Job_offer_website.Models.Job

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>تفاصيل الوظيفة</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobTitel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobTitel)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobContent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobContent)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobImage)
        </dt>

        <dd>
            <img src="~/Uploads/@Html.DisplayFor(model => model.JobImage)" class="thumbnail" style="width:128px; height:128px" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("التقدم الى هذه الوظيفة", "Apply", new { id = Model.Id }, new { @class = "btn btn-success" }) |
    @Html.ActionLink("العودة الى الصفحة الرئيسية", "Index", new { @class = "btn btn-default" })
</p>
